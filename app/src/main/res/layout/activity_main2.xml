<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.rafaj.fragmentapp.Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textId"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:hint="@string/hint_nombre"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTitulo"
        android:layout_below="@+id/textId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:hint="@string/hint_titulo"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLugar"
        android:layout_below="@+id/textTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:hint="@string/hint_lugar"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textColor"
        android:layout_below="@+id/textLugar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:hint="@string/hint_color"
        android:textSize="24sp"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imgPlaneta"
        android:layout_below="@+id/textColor"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
